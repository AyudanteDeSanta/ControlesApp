<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Perfil" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlesApp.PerfilTab">
    
            <Grid RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>

                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" Padding="12" BackgroundColor="Orange">
                    <Label Text="Row 0" FontSize="25" TextColor="White"></Label>
                </StackLayout>
                <StackLayout Grid.Row="1" Padding="12" BackgroundColor="Green">
                    <Label Text="Row 1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"></Label>
                </StackLayout>
                <StackLayout Grid.Row="2" Padding="12" BackgroundColor="Maroon">
                </StackLayout>

            </Grid>
        <!--</StackLayout>
    </ContentPage.Content>-->
    
</ContentPage>